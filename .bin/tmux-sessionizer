#!/usr/bin/env bash

printf "\033]2;tmux-sessionizer\a"

selected=$(fd '^.git$' $HOME/Code --hidden --exec bash -c 'cd {//}; git worktree list --porcelain' bash | grep '^worktree ' | sd '^worktree ' '' | sd '/.bare$' '' | sd "$HOME/Code/" '' | sort | uniq | fzf --exit-0)

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(echo "$selected" | tr . _)

if [[ -z $TMUX ]]; then
    tmux new-session -A -s $selected_name -c $HOME/Code/$selected
    exit 0
fi

tmux new-session -ds $selected_name -c $HOME/Code/$selected

tmux switch-client -t $selected_name
